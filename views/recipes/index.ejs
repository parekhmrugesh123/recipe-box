<!DOCTYPE html>
<html lang="en">
<% layout('layouts/boilerplate') %>
    <h1 class="text-center">All Recipes</h1>
    <div class="text-center">
        <a class="my-3 btn btn-primary btn-lg" href="/recipes/new">Add Recipe</a>
    </div>
    <div class="mb-5">
        <ul>
            <% for (let recipe of recipes) { %>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-2">
                            <img class="img-fluid" src="<%= recipe.image %>" alt="">
                        </div>
                        <div class="col-md-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= recipe.name %>
                                </h5>
                                <p class="card-text">
                                    <%= recipe.summary %>
                                </p>
                                <a href="/recipes/<%= recipe._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </ul>
    </div>

    <!-- change to grid cards -->