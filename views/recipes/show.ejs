<% layout('layouts/boilerplate') %>

    <div class="row mb-5">
        <div class="col-8">
            <h2 class="">
                <%= recipe.name %>
            </h2>
            <div class="card">
                <img src="<%= recipe.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text mb-1">
                        <%= recipe.summary %>
                    </p>
                    <p class="card-text">
                        <small class="text-body-secondary">Submitted by: <%= recipe.author.username %></small>
                    </p>
                    <p class="card-text">
                        <small class="text-body-secondary">Cook Time: <%= recipe.cooktime %> Minutes</small>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <p class="card-text">Ingredients:</p>
                        <ul>
                            <div class="row">
                                <% for (const ingredient of recipe.ingredients.split(',')) { %>
                                    <div class="col-md-6">
                                        <li>
                                            <%= ingredient.trim() %>
                                        </li>
                                    </div>
                                    <% } %>
                            </div>
                        </ul>
                    </li>
                    <li class="list-group-item">
                        <p class="card-text">Directions:</p>
                        <ol>
                            <% const directions=recipe.directions.split(/\d+\. /) %>
                                <% for (const direction of directions) { %>
                                    <% if (direction.trim() !=='' ) { %>
                                        <li>
                                            <%= direction.trim() %>
                                        </li>
                                        <% } %>
                                            <% } %>
                        </ol>
                    </li>
                </ul>
                <% if(currentUser && recipe.author.equals(currentUser._id)) { %>
                    <div class="card-body">
                        <a class="btn btn-info me-2" href="/recipes/<%= recipe._id %>/edit">Edit</a>
                        <form class="d-inline" action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>


        <div class="col-4 vh-100 overflow-auto">
            <% if(currentUser) { %>
                <div class="my-3">
                    <h4>Leave a Comment</h4>
                    <form action="/recipes/<%= recipe._id %>/comments" method="POST" class="needs-validation"
                        novalidate>
                        <div class="my-2">
                            <textarea class="form-control" name="comment[text]" id="text" rows="2" required></textarea>
                        </div>
                        <button class="btn btn-success btn-sm">Submit</button>
                    </form>
                </div>
                <% } %>

                    <div class="mt-3">
                        <h6>Comments:</h6>
                        <% for (let comment of recipe.comments) { %>
                            <div class="card mb-2">
                                <div class="card-body">
                                    <p class="card-text mb-1">
                                        <%= comment.text %>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-body-secondary">By: <%= comment.author.username %></small>
                                    </p>
                                    <% if(currentUser && comment.author.equals(currentUser._id)) { %>
                                        <form
                                            action="/recipes/<%= recipe._id %>/comments/<%= comment._id %>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>

        </div>

    </div>