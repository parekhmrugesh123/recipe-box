<% layout('layouts/boilerplate') %>

    <div class="container my-5">
        <div class="col-xl-4 offset-xl-4 col-md-6 offset-md-3">
            <div class="card shadow rounded-4">
                <img src="https://images.unsplash.com/photo-1528738064262-9f834cbdfda1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
                    alt="" class="card-img-top rounded-top-4">
                <div class="card-body">
                    <form action="/register" method="POST" class="needs-validation" novalidate>
                        <h1 class="mb-4 fw-normal">Register</h1>

                        <div class="form-floating mb-4">
                            <input type="text" class="form-control rounded-4" id="username" name="username"
                                placeholder="Username" required autofocus>
                            <label for="username">Username</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="email" class="form-control rounded-4" id="email" name="email"
                                placeholder="Email" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control rounded-4" id="password" name="password"
                                placeholder="Password" required>
                            <label for="password">Password</label>
                        </div>
                        <button class="btn btn-primary w-100 py-2 rounded-4 mb-2" type="submit">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>